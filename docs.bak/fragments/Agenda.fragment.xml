<core:FragmentDefinition xmlns="sap.m" 
    xmlns:core="sap.ui.core">
    <Table id="Agenda" 
        alternateRowColors="true" 
        items="{Agenda>/}">
        <columns>
            <Column demandPopin="true" minScreenWidth="Tablet" />
            <Column demandPopin="true" minScreenWidth="Tablet" hAlign="Center">
                <Text text="OASIS" />
            </Column>
            <Column demandPopin="true" minScreenWidth="Tablet" hAlign="Center">
                <Text text="Flynn's" />
            </Column>
            <Column demandPopin="true" minScreenWidth="Tablet" hAlign="Center">
                <Text text="Mos Eisley" />
            </Column>
            <Column demandPopin="true" minScreenWidth="Tablet" hAlign="Center">
                <Text text="Rylos" />
            </Column>
        </columns>
        <items>
            <ColumnListItem vAlign="Middle">
                <cells>
                    <Title text="{Agenda>time}"/>
                    <ObjectIdentifier title="{Agenda>oasis-name}" 
                        text="{Agenda>oasis-who}" />
                    <ObjectIdentifier title="{Agenda>flynns-name}" 
                        text="{Agenda>flynns-who}" />
                    <ObjectIdentifier title="{Agenda>mos-name}" 
                        text="{Agenda>mos-who}" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>